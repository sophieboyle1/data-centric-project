<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Stores</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        a {
            text-decoration: none;
            color: blue;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Stores</h1>
    <a href="/stores/add">Add Store</a>
    <table>
        <tr>
            <th>SID</th>
            <th>Location</th>
            <th>Manager ID</th>
            <th>Action</th>
        </tr>
        <% stores.forEach(function(store) { %>
            <tr>
                <td><%= store.sid %></td>
                <td><%= store.location %></td>
                <td><%= store.mgrid %></td>
                <td><a href="/stores/update/<%= store.sid %>">Update</a></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>

